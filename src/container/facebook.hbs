{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<div>
  <h1><b>Name: {{name}}</b></h1>
  <hr />
  <br />
  <b><p>Users:</p></b>
  {{#each users}}
    <ul>
      <li>Id: {{id}}</li>
      <li>Name: {{name}}</li>
      <li>Gender: {{gender}}</li>
      <li>Age: {{age}}</li>

      {{#if friends}}<h4>Friends:</h4>{{/if}}
      <ul>
        {{#each friends}}
          <li>Id: {{id}}</li>
          <li>Name: {{name}}</li>
          <li>Gender: {{gender}}</li>
          <li>Age: {{age}}</li>
          {{#if mutual_friends}}<h4>Mutual friends:</h4>{{/if}}
          {{#each mutual_friends}}
            <ul>
              <li>Id: {{id}}</li>
              <li>Name: {{name}}</li>
              <li>Gender: {{gender}}</li>
              <li>Age: {{age}}</li>

              {{#if mutual_friends}}<h4>Mutual friends:</h4>{{/if}}
              {{#each mutual_friends}}
                <ul>
                  <li>Id: {{id}}</li>
                  <li>Name: {{name}}</li>
                  <li>Gender: {{gender}}</li>
                  <li>Age: {{age}}</li>
                </ul>
              {{/each}}
              <br />
            </ul>
          {{/each}}

          {{#if groups}}<h4>Groups:</h4>{{/if}}
          {{#each groups}}
            <ul>
              <li>Id: {{id}}</li>
              <li>Name: {{name}}</li>
              <li>Description: {{description}}</li>

              {{#if members}}<h4>Members:</h4>{{/if}}
              {{#each members}}
                <br />
                <ul>
                  <li>Id: {{id}}</li>
                  <li>Name: {{name}}</li>
                  <li>Gender: {{gender}}</li>
                  <li>Age: {{age}}</li>
                </ul>
              {{/each}}
              <br />
            </ul>
          {{/each}}
        {{/each}}
      </ul>

      {{#if groups}}<h4>Groups:</h4>{{/if}}
      {{#each groups}}
        <ul>
          <li>Id: {{id}}</li>
          <li>Name: {{name}}</li>
          <li>Description: {{description}}</li>

          {{#if members}}<h4>Members:</h4>{{/if}}
          {{#each members}}
            <ul>
              <li>Id: {{id}}</li>
              <li>Name: {{name}}</li>
              <li>Gender: {{gender}}</li>
              <li>Age: {{age}}</li>
            </ul>
            <br />
          {{/each}}
        </ul>
      {{/each}}
    </ul>
  {{/each}}
</div>
