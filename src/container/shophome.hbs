<main class='p'>
  <div class='row g-4'>
    <div class='card'>
      <div class='col-12'>
        <div class='nav nav-tabs'>
          <div class='nav-item'>
            <a href='#' class='nav-link'>Home</a>
          </div>
          <div class='nav-item'>
            <a href='#' class='nav-link'>Contacts</a>
          </div>
          <div class='nav-item'>
            <a href='#' class='nav-link'>Help</a>
          </div>
          <div class='nav-item'>
            <a href='#' class='nav-link disabled'>Shop list</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br />
  <br />

  {{#with newsBlock}}
    <h3 class='text-center'>Latest News</h3>

    <br />
    <div class='row g-2'>
      {{#each cards}}

        <div class='col-3'>
          <div class='card-body'>
            <div class='card text-bg-dark'>

              <h6 class='card-title'>{{title}}
                {{#if isTop}}
                  <div
                    class='badge rounded-pill bg-success'
                  >Top</div>
                {{/if}}
                {{#if isNew}}
                  <div
                    class='badge rounded-pill bg-danger'
                  >New</div>
                {{/if}}
              </h6>

              <p class='card-text'>{{description}}</p>
              <div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/with}}
  <br />
  <hr />
  <br />
  <br />

  {{#with goodsBlock}}

    <ul class='nav nav-tabs card-tabs'>
      <li class='nav-item'>
        <a
          class='nav-link active'
          aria-current='true'
          href='#'
        >Electronics</a>
      </li>
      <hr />
      <li class='nav-item'>
        <a class='nav-link' href='#'>Home & Kitchen</a>
      </li>
      <li class='nav-item'>
        <a class='nav-link' href='#'>Clothing & Accessories</a>
      </li>
      <li class='nav-item'>
        <a class='nav-link disabled'>Disabled</a>
      </li>
    </ul>
    <br />
    <br />
    <div class='row g-2'>
      {{#each cards}}

        <div class='col-4'>
          <div class='card'>

            <img src='{{image}}' alt='{{title}}' />

            <div class='card-body'>
              <h6 class='card-title'>{{title}}
                {{#if isHot}}
                  <div
                    class='badge rounded-pill bg-warning'
                  >Hot</div>
                {{/if}}
                {{#if idNew}}
                  <div
                    class='badge rounded-pill bg-primary'
                  >New</div>
                {{/if}}
              </h6>

              <p class='card-text'>{{description}}</p>
            </div>
          </div>
        </div>

      {{/each}}
    </div>
  {{/with}}
  <br />
  <br />
  <hr />
  <br />
  <br />
  {{#with subscribe}}
    <div class='card'>
      <div class='card text-bg-dark h-100'>
        <h2 class='card-header'>Unlock Premium Content</h2>
        <div class='card-body'>

          <p class='card-text'>We offer a variety of
            services to meet your needs, including web
            design, content creation, and social media
            management.</p>
          {{#each buttons}}
            <div class='gap-2 mb-3'>
              <a
                href='#'
                class='btn btn-primary'
              >{{text}}</a>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  {{/with}}
  <br />
  <br />
  <hr />
  <br />
  <br />
  {{#with service}}
    <div class='card text-center'>
      <div class='card text-bg-success'>
        <div class='card-body'>
          <h2 class='card-title'>Our Services</h2>
          <p class='card-text'>We offer a variety of
            services to meet your needs, including web
            design, content creation, and social media
            management.</p>

          {{#each buttons}}
            <div class='gap-2 mb-3'>
              <a
                href='#'
                class='btn btn-primary'
              >{{text}}</a>
            </div>
          {{/each}}

        </div>
      </div>
    </div>
  {{/with}}
  <br />
  <br />
  <hr />
  <br />
  <br />

  <div class='row d-3 m-3'>
    <ul class='nav'>
    {{#each footer}}
      <div class='col'>
        {{#each this}}
        <li class='nav-item'>
        <a class='nav-link {{#if @last}} disabled {{/if}}' {{#if @last}} {{else}}href={{link}} {{/if}}>{{text}}</a>
        </li>
        {{/each}}

      </div>
      {{/each}}
      </ul>
  </div>

</main>