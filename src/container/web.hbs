{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with web}}
        <div>
              
            <h1>{{> title data='Web' big=true}}</h1>
            <hr>
                
                <b><p>Languages</p></b>
                {{#each languages}}
                    <ul>
                        <li>name: {{name}}</li>
                        <li>version: {{version}}</li>
                        <li>description: {{description}}</li>
                    </ul>
                
                <br>
                <hr>
                {{#if elements}}<h4>Elements:</h4>{{/if}}
                {{#each elements}}
                    <li>name: {{name}}</li>
                    <li>description: {{description}}</li>
                    <ul>     
                        {{#each attributes}}
                            <li>name: {{name}}</li>
                            <li>description: {{description}}</li>
                        {{/each}}
                    </ul>
                {{/each}}

                {{#if properties}}<h4>Properties:</h4>{{/if}}
                {{#each properties}}
                    <li>name: {{name}}</li>
                    <li>description: {{description}}</li>
                    <ul>                
                        {{#each values}}
                            <li>value: {{value}}</li>
                            <li>description: {{description}}</li>
                        {{/each}}   
                    </ul>
                {{/each}}

                 {{#if functions}}<h4>Functions:</h4>{{/if}}
                {{#each functions}}
                    <li>name: {{name}}</li>
                    <li>description: {{description}}</li>
                    <ul>                
                        {{#each parameters}}
                            <li>name: {{name}}</li>
                            <li>type: {{type}}</li>
                            <li>description: {{description}}</li>
                        {{/each}}   
                    </ul>
                {{/each}}
            </ul>
            <br>
            <hr>
            <hr>   
            {{/each}}
    {{/with}}    
</div>

